<h1>Products</h1>
<% @products.each do |product| %>
  <h3><%= product.name %></h3>
  <div id="product-<%= product.id %>"><%= truncate(product.description) %></div>
  <div id="order-<%= product.id %>"></div>
  <button class="js-more" data-id="<%= product.id %>">More Info</button>
<% end %>

<script type="text/javascript" charset="utf-8">
$(function() {
  $(".js-more").on("click", function() {
    var id = $(this).data("id");
    $.get("/products/" + id + ".json", function(data) {
        var inventoryText = "<strong>Available</strong>";
        if(data["inventory"] === 0){
          inventoryText = "<strong>Sold Out</strong>";
        }
        var descriptionText = data["description"] + inventoryText;
        $("#product-" + id).html(descriptionText);

        // var orders = data["orders"];
        // var orderList = "";
        // orders.forEach(function(order) {
        //   orderList += order["id"];
        //   orderList += "<br>";
        //   orderList += order["created_at"];
        //   orderList += "<br>";
        //
        //   products = order["products"];
        //   products.forEach(function(product) {
        //     orderList += product["name"];
        //   });
        // });

      var orders = data["orders"];
      var orderList = "";
      orders.forEach(function(order) {
        orderList += '<li class="js-order" data-id="' + order["id"] + '">' + order["id"] + ' - ' + order["created_at"];
        orderList += ' <br>Products:<ol>';
        products = order["products"];
        products.forEach(function(prod) {
          orderList += '<li>' + prod["name"] + '</li>';
        });
        orderList += '</ol></li>';
      });
        $("#order-" + id).html(orderList);
    });
  });
});
</script>
