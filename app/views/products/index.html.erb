        if(inventory === 1){
          inventoryText = "<strong>Sold Out</strong>";}

        var descriptionText = "<p>" + description + "</p><p>" + inventoryText + " " + "<br>" + orderString + "</p>";
        $("#product-" + id).html(descriptionText);
    });
  });
});
</script>
