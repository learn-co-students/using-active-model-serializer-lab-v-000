<a href="#" class="js-next" data-id="<%=@product.id%>">Next Product</a>
<h1 class="productName"><%= @product.name %></h1>
<p class="productInventory"><%= @product.inventory %></p>
<p class="productPrice"><%= @product.price %></p>
<p class="productDescription"><%= @product.description %></p>

<script type="text/javascript" charset="utf-8">
$(function () {
  var nextId = 0;
  $(".js-next").on("click", function() {
    nextId = parseInt($(".js-next").attr("data-id")) + 1;
    console.log(nextId);
    $.get("/products/" + nextId + ".json", function(data) {
      $(".productName").text(data.product["name"]);
      $(".productPrice").text(data.product["price"]);
      $(".productDescription").text(data.product["description"]);
      $(".productInventory").text(data.product["inventory"]);
      // re-set the id to current on the link
      $(".js-next").attr("data-id", data.product["id"]);
    });
  });
});
</script>

